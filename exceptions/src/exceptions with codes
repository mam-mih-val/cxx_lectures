T& operator[]( size_t idx ){
        if( idx >= N ){
            std::cerr << "The required index is out of range" << std::endl;
            throw 1;
        }
        return data_[idx];
    }

for( size_t i=0; i<4; ++i ) try {
        std::cout << vec3[i] << ", ";
    } catch( int error ){ 
        std::cout << "Error is caught with the code " << error << std::endl;
    }
    std::cout << std::endl;
